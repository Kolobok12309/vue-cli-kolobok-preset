{
    "useConfigFiles": true,
    "plugins": {
        "@vue/cli-plugin-babel": {},
        "@vue/cli-plugin-eslint": {
            "config": "airbnb",
            "lintOn": [
                "save"
            ]
        },
        "@vue/cli-plugin-unit-jest": {},
        "@vue/cli-plugin-e2e-nightwatch": {}
    },
    "router": true,
    "vuex": true,
    "cssPreprocessor": "sass",
    "configs": {
        "babel": {
            "presets": [
                "@vue/app"
            ],
            "plugins": [
                "@babel/plugin-proposal-optional-chaining"
            ]
        },
        "vue": {
            "assetsDir": "sys",
            "productionSourceMap": false,
            "devServer": {
                "disableHostCheck": true
            }
        }
    }
}